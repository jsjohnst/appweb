###############################################################################

. ${BLD_TOP}/build/standard.defaults

BLD_COMMERCIAL=1
BLD_TYPE="RELEASE" 
BLD_ASSERT=0
BLD_DEBUG=0
BLD_DEFAULTS="commercial"
BLD_FEATURE_DOC="1"
BLD_PACKAGES="matrixssl openssl php regexp mpr sqlite ejs appweb"
BLD_NUMBER="${BLD_NUMBER}M"

