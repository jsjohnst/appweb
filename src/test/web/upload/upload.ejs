<!--
	This ESP document demonstrates the use of file upload.
-->

<html>
<head>
	<title>Embedded Server Pages File Upload</title>
</head>

<% 	
	if (request["REQUEST_METHOD"] == "POST") {
		for (f in files) {
			// trace("<p>Uploaded files " + f + "</p>\n");
			write("<p>Uploaded files " + f + "</p>");
		}
		rename(files['uploadFile'].FILENAME, "/tmp/uploaded.tmp");

		write("\nLocal File: " + files['uploadFile'].FILENAME +
			"\n<br/>");
		write("Renamed File: /tmp/uploaded.tmp" + "\n<br/>");
		write("Client file name : " + files['uploadFile'].CLIENT_FILENAME + 
			"<br/>");
		write("Size of file : " + files['uploadFile'].SIZE + "<br/>");
	}
%>

<body>

<H4>Test File Upload</H4>
<form method="POST" action="@@request['SCRIPT_NAME']" enctype="multipart/form-data">

<p>
<input name="MAX_FILE_SIZE" type="hidden" value="30000">
<input name="uploadFile" type="file">
</p>
<p>
<input type="submit" name="ok" value="Send">
<input type="reset" name="ok" value="Cancel">
</p>
</form>

</body>
</html>

